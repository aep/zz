export fn push64(MutSlice mut * self, u64 b) -> bool
    where   integrity(self)
    model   integrity(self)
{
    if self->size < 8 || *self->at > self->size - 8 {
        return false;
    }

    c_string::memcpy(self->mem + *self->at, &b, 8);
    *self->at += 8;

