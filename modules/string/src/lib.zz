using <string.h> as c_string;
using <stdio.h> as stdio;
using <stdarg.h>::{va_list, va_start, va_end};
using <stdio.h>::{vsnprintf, printf, FILE};
using slice::{Slice, MutSlice};

export struct String+ {
    usize   len;
    char    mem[];
}


/*
